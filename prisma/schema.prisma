// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

// Generate Zod schemas from Prisma models to keep server/client types in sync
generator zod {
    provider      = "prisma-zod-generator"
    // Server-only: generate under src/server so clients don't import these directly
    output        = "../src/server/zod"
    relationModel = true
}

datasource db {
    provider   = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url        = env("DATABASE_URL")
    // Allow multi-schema setup for auth and app
    schemas    = ["app", "auth"]
}

// --- Patch lifecycle enums ---
enum PatchStatus {
    in_development
    in_deployment
    active
    deprecated

    @@schema("app")
}

enum PatchAction {
    start_deployment
    cancel_deployment
    mark_active
    revert_to_deployment
    deprecate
    reactivate

    @@schema("app")
}

enum ReleaseTrack {
    Future
    Beta
    Rollout
    Active
    Archived

    @@schema("app")
}

enum ActionExecutionStatus {
    success
    failed
    cancelled

    @@schema("app")
}

model ReleaseVersion {
    id                String    @id @default(dbgenerated("uuidv7()")) @db.Uuid
    name              String    @unique
    // componentVersions ComponentVersion[]
    patches           Patch[]
    /// Tracks the last used patch increment for this release
    /// Starts at -1 so the first auto-created patch gets increment 0
    lastUsedIncrement Int         @default(-1)
    releaseTrack      ReleaseTrack @default(Future)

    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    createdBy   User     @relation(fields: [createdById], references: [id])
    createdById String   @db.Uuid

    @@index([name])
    @@index([createdById])
    @@schema("app")
}

model User {
    id                     String @id @default(dbgenerated("uuidv7()")) @db.Uuid
    name                   String?
    // TODO: Remove
    email                  String? @unique
    emailVerified          DateTime?
    image                  String?
    accounts               Account[]
    sessions               Session[]
    ReleaseVersions        ReleaseVersion[]
    Patches                Patch[]
    ReleaseComponents      ReleaseComponent[]
    PatchTransition        PatchTransition[]
    jiraCredential         JiraCredential?
    actionLogs             ActionLog[]

    @@schema("app")
}

// Necessary for Next auth
// AUTH MODELS (mapped to auth schema)
model Account {
    id                       String  @id @default(dbgenerated("uuidv7()")) @db.Uuid
    userId                   String  @db.Uuid
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
    @@index([userId])
    @@schema("auth")
}

model Session {
    id           String   @id @default(dbgenerated("uuidv7()")) @db.Uuid
    sessionToken String   @unique
    userId       String   @db.Uuid
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
    @@schema("auth")
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
    @@schema("auth")
}

model Patch {
    id                String             @id @default(dbgenerated("uuidv7()")) @db.Uuid
    name              String
    version           ReleaseVersion     @relation(fields: [versionId], references: [id])
    versionId         String             @db.Uuid
    /// Snapshot of tokens used to generate this patch's name
    tokenValues       Json
    componentVersions ComponentVersion[]

    createdAt              DateTime                 @default(now())
    updatedAt              DateTime                 @updatedAt
    createdBy              User                     @relation(fields: [createdById], references: [id])
    createdById            String                   @db.Uuid
    PatchTransition        PatchTransition[]

    @@index([versionId, createdAt])
    @@index([createdById])
    @@schema("app")
}

model ReleaseComponent {
    id                String             @id @default(dbgenerated("uuidv7()")) @db.Uuid
    name              String             @unique
    color             String
    namingPattern     String
    releaseScope      ReleaseComponentScope
    componentVersions ComponentVersion[]

    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    createdBy   User     @relation(fields: [createdById], references: [id])
    createdById String   @db.Uuid

    @@index([createdById])
    @@schema("app")
}

enum ReleaseComponentScope {
    version_bound
    global

    @@schema("app")
}

model ComponentVersion {
    id                 String           @id @default(dbgenerated("uuidv7()")) @db.Uuid
    releaseComponent   ReleaseComponent @relation(fields: [releaseComponentId], references: [id])
    releaseComponentId String           @db.Uuid
    patch              Patch            @relation(fields: [patchId], references: [id])
    patchId            String           @db.Uuid
    name               String
    increment          Int
    /// Snapshot of tokens used to generate this component version's name
    tokenValues        Json

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    /// Ensure at most one ComponentVersion exists per (patch, releaseComponent)
    @@unique([patchId, releaseComponentId])
    @@index([releaseComponentId])
    @@index([patchId])
    @@schema("app")
}

// History of state transitions for Release patches.
model PatchTransition {
    id             String             @id @default(dbgenerated("uuidv7()")) @db.Uuid
    patch          Patch              @relation(fields: [patchId], references: [id])
    patchId        String             @db.Uuid
    fromStatus     PatchStatus
    toStatus       PatchStatus
    action         PatchAction

    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    createdBy   User     @relation(fields: [createdById], references: [id])
    createdById String   @db.Uuid

    @@index([patchId, createdAt])
    @@schema("app")
}

model ActionLog {
    id           String                @id @default(dbgenerated("uuidv7()")) @db.Uuid
    actionType   String
    message      String                @db.Text
    status       ActionExecutionStatus @default(success)
    sessionToken String?
    workflowId   String?
    metadata     Json?

    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    createdBy   User     @relation(fields: [createdById], references: [id])
    createdById String   @db.Uuid

    subactions ActionSubactionLog[]

    @@index([sessionToken, createdAt])
    @@index([createdById, createdAt])
    @@schema("app")
}

model ActionSubactionLog {
    id            String                @id @default(dbgenerated("uuidv7()")) @db.Uuid
    action        ActionLog             @relation(fields: [actionId], references: [id], onDelete: Cascade)
    actionId      String                @db.Uuid
    subactionType String
    message       String                @db.Text
    status        ActionExecutionStatus @default(success)
    metadata      Json?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([actionId, createdAt])
    @@schema("app")
}

// Stores per-user Jira Cloud credentials
model JiraCredential {
    id       String @id @default(dbgenerated("uuidv7()")) @db.Uuid
    user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId   String @unique @db.Uuid
    email    String
    apiToken String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([userId])
    @@schema("app")
}

enum JiraReleaseStatus {
    Released
    Unreleased
    Archived

    @@schema("app")
}

// Stores Jira versions fetched from the API for local use
model JiraVersion {
    id            String            @id @default(dbgenerated("uuidv7()")) @db.Uuid
    jiraId        String // Jira version id from API
    name          String
    description   String?
    releaseStatus JiraReleaseStatus @default(Unreleased)
    releaseDate   DateTime?
    startDate     DateTime?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([jiraId])
    @@index([releaseStatus])
    @@index([releaseStatus, name])
    @@schema("app")
}
