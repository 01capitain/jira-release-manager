{
  "name": "jira-release-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "env:check": "node scripts/check-node.mjs",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "preinstall": "node scripts/check-node.mjs",
    "postinstall": "prisma generate",
    "build": "next build",
    "clean": "rm -rf .next tsconfig.tsbuildinfo",
    "db:init": "prisma db execute --file ./init.sql --schema prisma/schema.prisma",
    "db:reset": "node scripts/dev-db-reset.mjs",
    "db:generate": "prisma migrate dev",
    "db:lint": "node scripts/disallow-boolean-fields.mjs",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:validate": "prisma validate",
    "db:studio": "prisma studio",
    "dev": "node scripts/show-otel-hint.mjs && next dev --turbo",
    "lint": "eslint .",
    "lint:a11y": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint --fix .",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "test:all": "jest && pnpm test:db-schema",
    "test": "jest",
    "test:services": "jest tests/services",
    "test:db-schema": "node tests/scripts/test-lint-db-schema.mjs",
    "entity:expose": "node scripts/entity-expose.mjs",
    "openapi:generate": "node scripts/run-openapi.cjs",
    "openapi:check": "node scripts/run-openapi.cjs --check",
    "check-all": "pnpm run env:check && pnpm openapi:check && pnpm prettier:check && pnpm typecheck && pnpm lint && pnpm run db:lint",
    "prepare": "husky",
    "seed:claim-owner": "tsx scripts/claim-seed-owner.ts"
  },
  "engines": {
    "node": ">=22.0.0 <23"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/auto-instrumentations-web": "^0.54.0",
    "@opentelemetry/context-zone-peer-dep": "^2.2.0",
    "@opentelemetry/core": "^2.2.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.207.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/instrumentation": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/sdk-trace-web": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.6.1",
    "import-in-the-middle": "^2.0.0",
    "lucide-react": "^0.543.0",
    "next": "^15.5.6",
    "next-auth": "5.0.0-beta.25",
    "next-themes": "^0.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "require-in-the-middle": "^8.0.1",
    "server-only": "^0.0.1",
    "sonner": "1.7.1",
    "superjson": "^2.2.5",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.12",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.25",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "cookie": "^1.0.2",
    "esbuild": "^0.25.12",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.5.6",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.19.0",
    "prisma-zod-generator": "^1.31.8",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "yaml": "^2.8.1",
    "zod-openapi": "^5.4.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "prisma/schema.prisma": [
      "pnpm run db:lint",
      "prisma validate"
    ]
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
  "packageManager": "pnpm@10.20.0",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
