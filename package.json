{
  "name": "jira-release-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build", "comment": "Builds the Next.js application for production.",
    "check": "next lint && pnpm run lint:db-schema && tsc --noEmit", "comment": "Runs all checks, including linting, database schema linting, and type checking.",
    "db:generate": "prisma migrate dev", "comment": "Generates a new database migration based on the Prisma schema.",
    "db:migrate": "prisma migrate deploy", "comment": "Applies all pending database migrations.",
    "db:push": "prisma db push", "comment": "Pushes the Prisma schema to the database without generating a migration.",
    "db:studio": "prisma studio", "comment": "Opens the Prisma Studio to view and edit data in the database.",
    "dev": "next dev --turbo", "comment": "Starts the Next.js development server with Turbopack.",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache", "comment": "Checks the formatting of all specified files.",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache", "comment": "Formats all specified files.",
    "postinstall": "prisma generate", "comment": "Generates the Prisma Client after installing dependencies.",
    "lint": "next lint", "comment": "Lints the codebase using Next.js's ESLint configuration.",
    "lint:fix": "next lint --fix", "comment": "Lints and fixes all auto-fixable issues.",
    "lint:db-schema": "node scripts/disallow-boolean-fields.mjs", "comment": "Lints the database schema to disallow boolean fields.",
    "preview": "next build && next start", "comment": "Builds and starts the Next.js application in production mode.",
    "start": "next start", "comment": "Starts the Next.js application in production mode.",
    "typecheck": "tsc --noEmit", "comment": "Checks the TypeScript types without emitting any files.",
    "test": "jest", "comment": "Runs all tests using Jest.",
    "test:db-schema": "node test/scripts/test-lint-db-schema.mjs", "comment": "Tests the database schema linting script."
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.2",
    "@prisma/client": "^6.5.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tanstack/react-query": "^5.69.0",
    "@trpc/client": "^11.0.0",
    "@trpc/react-query": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "next": "^15.2.3",
    "next-auth": "5.0.0-beta.25",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "server-only": "^0.0.1",
    "superjson": "^2.2.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.2.3",
    "jest": "^30.1.3",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.5.0",
    "tailwindcss": "^4.0.15",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
  "packageManager": "pnpm@10.14.0"
}
