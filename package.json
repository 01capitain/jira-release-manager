{
  "name": "jira-release-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "env:check": "node scripts/check-node.mjs",
    "check": "pnpm run env:check && eslint . && pnpm run db:lint && tsc --noEmit",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "preinstall": "node scripts/check-node.mjs",
    "postinstall": "prisma generate",
    "build": "next build",
    "check-all": "eslint . && pnpm run db:lint && tsc --noEmit",
    "validate-all": "pnpm format:check && pnpm check-all",
    "clean": "rm -rf .next tsconfig.tsbuildinfo",
    "db:init": "prisma db execute --file ./init.sql --schema prisma/schema.prisma",
    "db:reset": "prisma migrate reset --force --skip-seed && pnpm db:init && prisma db push",
    "db:generate": "prisma migrate dev",
    "db:lint": "node scripts/disallow-boolean-fields.mjs",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:validate": "prisma validate",
    "db:studio": "prisma studio",
    "dev": "next dev --turbo",
    "lint": "eslint .",
    "lint:a11y": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint --fix .",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "test-all": "jest && pnpm test:db-schema",
    "test": "jest",
    "test:db-schema": "node tests/scripts/test-lint-db-schema.mjs"
  },
  "engines": {
    "node": ">=22.0.0 <23"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/client": "^6.16.0",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tanstack/react-query": "^5.87.4",
    "@trpc/client": "^11.5.1",
    "@trpc/react-query": "^11.5.1",
    "@trpc/server": "^11.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.543.0",
    "next": "^15.5.2",
    "next-auth": "5.0.0-beta.25",
    "next-themes": "^0.4.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "server-only": "^0.0.1",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.13",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jest": "^30.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.16.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
  "packageManager": "pnpm@10.14.0"
}
